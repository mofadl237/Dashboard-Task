datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Customers {
    id               String   @id @default(auto()) @map("_id") @db.ObjectId
    name             String   @unique
    phone            String
    email            String
    totalPurchases   Int
    ordersCount      Int
    lastPurchaseDate DateTime
    createdAt        DateTime @default(now())
}

model Suppliers {
    id               String   @id @default(auto()) @map("_id") @db.ObjectId
    name             String   @unique
    phone            String
    email            String
    totalPurchases   Int
    ordersCount      Int
    lastPurchaseDate DateTime
    createdAt        DateTime @default(now())
}

model Inventory{
    id String   @id @default(auto()) @map("_id") @db.ObjectId
    name String   
    quantity Int
    category String
    price Int
    supplierName String
}
model Purchases{
    id String   @id @default(auto()) @map("_id") @db.ObjectId
    name String   
    quantity Int
    category String
    price Int
    supplierName String
}
model Sales{
    id String   @id @default(auto()) @map("_id") @db.ObjectId
    name String   
    quantity Int
    category String
    price Int
    supplierName String
}